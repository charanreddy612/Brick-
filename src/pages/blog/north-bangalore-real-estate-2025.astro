---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import SiteFooter from "../../components/SiteFooter.astro";

const pageTitle =
  "Is North Bangalore Still the Best Real Estate Bet for 2025 & Beyond? Expert Analysis & Buyer Insights";
const pageDescription =
  "Deep analysis of North Bangalore real estate with real buyer experiences, future infrastructure insights, rental yield expectations, micro-market breakdown and transparent FAQs based on real buyer intent.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />

  <main class="pt-6 pb-16 lg:pb-20">
    {/* breadcrumb */}
