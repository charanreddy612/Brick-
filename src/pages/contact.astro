---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import SiteFooter from "../components/SiteFooter.astro";

const pageTitle = "Contact Brick.com â€“ Talk to a Real Estate Advisor";
const pageDescription =
  "Get in touch with Brick.com for curated project recommendations, site visits and honest guidance on Bangalore and Hyderabad real estate. Connect with our advisors to explore the right projects for your needs.";

const projectFromQuery = Astro.url.searchParams.get("project") || "";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />

  <main class="pt-6 pb-14 lg:pb-20">
    {/* Breadcrumb */}
    <div class="mx-auto max-w-7xl px-6 lg:px-10 mt-4 mb-6 text-xs text-slate-400">
      <a href="/" class="hover:text-cyan-300">Home</a>
      <span class="mx-1.5 text-slate-600">/</span>
      <span class="text-slate-300">Contact Us</span>
    </div>

    {/* Page Title */}
    <section class="mx-auto max-w-7xl px-6 lg:px-10">
      <div class="max-w-2xl space-y-3">
        <h1 class="text-3xl sm:text-4xl font-semibold text-white">
          Contact Us â€“ Letâ€™s Talk Real Estate
        </h1>
        <p class="text-sm sm:text-base text-slate-300">
          Buying a home or investing in real estate shouldnâ€™t feel complicated.
          Share your requirements, and our advisors will guide you with unbiased insights,
          realistic comparisons and on-ground experience.
        </p>
      </div>
    </section>

    {/* Main Contact Layout */}
    <section class="mx-auto max-w-7xl px-6 lg:px-10 mt-8 lg:mt-10 grid gap-8 lg:grid-cols-[0.9fr,1.1fr] items-start">
      {/* Left: Contact info & trust messaging */}
      <aside class="space-y-6">
        <div class="rounded-3xl border border-white/10 bg-slate-900/80 p-5 lg:p-6 space-y-4 shadow-[0_0_32px_rgba(15,23,42,0.8)]">
          <p class="text-[11px] uppercase tracking-[0.2em] text-cyan-200">
            How We Can Help
          </p>
          <ul class="space-y-2 text-xs sm:text-sm text-slate-200">
            <li>â€¢ Shortlist the right projects based on your needs & budget.</li>
            <li>â€¢ Explain location growth, pricing trends and real appreciation stories.</li>
            <li>â€¢ Assist with site visits and developer-level interactions.</li>
            <li>â€¢ Support comparisons across floor plans, builder reputation & ROI possibilities.</li>
          </ul>
        </div>

        {/* Contact Details */}
        <div class="rounded-3xl border border-white/10 bg-slate-900/70 p-5 space-y-5">
          <p class="text-[11px] uppercase tracking-[0.2em] text-slate-400">
            Connect With Us
          </p>

          <dl class="space-y-4 text-xs sm:text-sm text-slate-200">
            <div>
              <dt class="text-slate-400">Phone / WhatsApp</dt>
              <dd class="font-medium">
                +91 79890 41017 / +91 99855 31519
              </dd>
            </div>

            <div>
              <dt class="text-slate-400">Email</dt>
              <dd class="font-medium">
                contact@brick.com
              </dd>
            </div>

            <div>
              <dt class="text-slate-400">Hyderabad Office</dt>
              <dd class="font-medium">
                Rajapushpa Lifestyle City,<br />
                Tellapur, Hyderabad,<br />
                Telangana 502034<br />
                Contact: +91 99855 31519
              </dd>
            </div>

            <div>
              <dt class="text-slate-400">Bangalore Office</dt>
              <dd class="font-medium">
                Golden Blossom Apartments,<br />
                Ward No. 83, Sai Baba Ashram,<br />
                Whitefield - Hoskote Rd,<br />
                Opposite to Belatur Colony, Kadugodi,<br />
                Bengaluru, Karnataka 560067<br />
                Contact: +91 79890 41017
              </dd>
            </div>
          </dl>
        </div>

        <div class="rounded-3xl border border-amber-400/40 bg-slate-900/80 p-4 space-y-2">
          <p class="text-[11px] uppercase tracking-[0.2em] text-amber-200">
            Important
          </p>
          <p class="text-xs sm:text-sm text-slate-100">
            Brick.com acts as an authorised channel partner. We do not collect booking payments online.
            All transactions are processed only directly with the respective developer.
          </p>
        </div>
      </aside>

      {/* Right: Contact form */}
      <section class="rounded-3xl border border-white/10 bg-slate-900/80 p-5 lg:p-7 shadow-[0_0_32px_rgba(15,23,42,0.8)]">
        <p class="text-[11px] uppercase tracking-[0.2em] text-cyan-200 mb-4">
          Share Your Details
        </p>

        <form class="space-y-4" method="POST" action="#">
          {/* Row 1: Name & Email */}
          <div class="grid gap-4 sm:grid-cols-2">
            <div class="space-y-1.5">
              <label for="name" class="block text-xs font-medium text-slate-200">
                Full Name
              </label>
              <input
                id="name"
                name="name"
                type="text"
                required
                class="w-full rounded-xl border border-slate-600 bg-slate-950/60 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-500 focus:border-cyan-400 focus:outline-none focus:ring-1 focus:ring-cyan-400"
                placeholder="Enter your full name"
              />
            </div>

            <div class="space-y-1.5">
              <label for="email" class="block text-xs font-medium text-slate-200">
                Email Address
              </label>
              <input
                id="email"
                name="email"
                type="email"
                required
                class="w-full rounded-xl border border-slate-600 bg-slate-950/60 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-500 focus:border-cyan-400 focus:outline-none focus:ring-1 focus:ring-cyan-400"
                placeholder="you@example.com"
              />
            </div>
          </div>

          {/* Row 2: Phone & Project */}
          <div class="grid gap-4 sm:grid-cols-2">
            <div class="space-y-1.5">
              <label for="phone" class="block text-xs font-medium text-slate-200">
                Phone / WhatsApp
              </label>
              <input
                id="phone"
                name="phone"
                type="tel"
                class="w-full rounded-xl border border-slate-600 bg-slate-950/60 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-500 focus:border-cyan-400 focus:outline-none focus:ring-1 focus:ring-cyan-400"
                placeholder="+91 9XXXXXXXXX"
              />
            </div>

            <div class="space-y-1.5">
              <label for="project" class="block text-xs font-medium text-slate-200">
                Project (optional)
              </label>
              <input
                id="project"
                name="project"
                type="text"
                value={projectFromQuery}
                class="w-full rounded-xl border border-slate-600 bg-slate-950/60 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-500 focus:border-cyan-400 focus:outline-none focus:ring-1 focus:ring-cyan-400"
                placeholder="Eg. Poulomi Florique, North Bangalore"
              />
            </div>
          </div>

          {/* Message */}
          <div class="space-y-1.5">
            <label for="message" class="block text-xs font-medium text-slate-200">
              Tell us a bit about what youâ€™re looking for
            </label>
            <textarea
              id="message"
              name="message"
              rows={4}
              class="w-full rounded-xl border border-slate-600 bg-slate-950/60 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-500 focus:border-cyan-400 focus:outline-none focus:ring-1 focus:ring-cyan-400"
              placeholder="Eg. 3 BHK near Manyata / Whitefield, budget range, timeline, end-use or investment."
            ></textarea>
          </div>

          {/* Consent */}
          <div class="space-y-3 pt-1">
            <label class="flex items-start gap-2 text-[11px] text-slate-300">
              <input
                type="checkbox"
                name="consent"
                class="mt-0.5 h-3.5 w-3.5 rounded border-slate-600 bg-slate-950 text-cyan-400 focus:ring-cyan-400"
                required
              />
              <span>
                I agree to be contacted by phone / WhatsApp / email regarding my enquiry.
                I understand this is not a booking and does not create any legal obligation.
              </span>
            </label>

            {/* Submit button */}
            <button
              type="submit"
              class="w-full rounded-full bg-cyan-400 py-2.5 text-sm font-semibold text-slate-900 shadow-lg shadow-cyan-400/40 hover:bg-cyan-300 transition-colors"
            >
              Submit Enquiry
            </button>

            {/* WhatsApp direct button */}
            <a
              href="https://wa.me/917989041017?text=Hi%2C%20I%20saw%20your%20website%20and%20would%20like%20to%20discuss%20real%20estate%20projects."
              target="_blank"
              rel="noopener noreferrer"
              class="mt-3 flex items-center justify-center gap-2 w-full rounded-full border border-green-400 bg-green-500/10 py-2.5 text-sm font-medium text-green-300 hover:bg-green-500/20 transition-colors"
            >
              ðŸ’¬ Chat on WhatsApp
            </a>

            <p class="text-[11px] text-slate-500">
              Form submission handling (email / CRM / API) can be integrated next. For now, this layout
              prepares all key fields you need from a serious enquiry.
            </p>
          </div>
        </form>
      </section>
    </section>

    {/* Basic ContactPage JSON-LD for SEO */}
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "ContactPage",
        name: "Contact Brick.com",
        description: pageDescription,
        url: "https://brick-inky-peach.vercel.app/contact",
        about: {
          "@type": "Organization",
          name: "Brick.com",
          areaServed: "Bengaluru and Hyderabad, India"
        }
      })}
    </script>
  </main>

  <SiteFooter />
</BaseLayout>
