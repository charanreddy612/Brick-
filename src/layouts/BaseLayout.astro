---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Brick.com – Curated Real Estate Across India",
  description = "Discover verified residential projects with strong fundamentals, future-ready amenities, and trustworthy developers – handpicked for serious buyers and investors.",
} = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body class="bg-slate-950 text-slate-100 antialiased">
    <!-- GLOBAL animated background (for the whole website) -->
    <div class="fixed inset-0 -z-10 overflow-hidden">
      <!-- Solid base -->
      <div class="absolute inset-0 bg-slate-950"></div>

      <!-- Slow-moving color glow -->
      <div class="absolute -inset-24 blur-3xl opacity-80 bg-animated-gradient"></div>

      <!-- Soft grid overlay -->
      <div class="absolute inset-0 bg-grid-soft opacity-[0.18] mix-blend-soft-light"></div>
    </div>

    <!-- Actual page content -->
    <div class="relative min-h-screen flex flex-col overflow-x-hidden">
      <slot />
    </div>
  </body>
</html>
