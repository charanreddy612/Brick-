---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Brick.com – Curated Real Estate Across India",
  description = "Discover verified residential projects with strong fundamentals, future-ready amenities, and trustworthy developers – handpicked for serious buyers and investors.",
} = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
  </head>

  <body class="bg-slate-950 text-slate-100 antialiased">
    <!-- GLOBAL cinematic video background (for the whole site) -->
    <div class="fixed inset-0 -z-10 overflow-hidden">
      <!-- Background video -->
      <video
        autoplay
        muted
        loop
        playsinline
        class="absolute inset-0 w-auto min-w-full min-h-full max-w-none object-cover opacity-70"
      >
        <source src="/assets/bg-video.mp4" type="video/mp4" />
      </video>

      <!-- Dark overlay for readability -->
      <div class="absolute inset-0 bg-slate-950/65 backdrop-blur-[1px]"></div>

      <!-- Optional subtle grid overlay to keep the tech vibe -->
      <div class="absolute inset-0 bg-grid-soft opacity-[0.2] mix-blend-soft-light pointer-events-none"></div>
    </div>

    <!-- Actual page content -->
    <div class="relative min-h-screen flex flex-col overflow-x-hidden">
      <slot />
    </div>

    <!-- Floating WhatsApp Button (Global) -->
    <a
      href="https://wa.me/917989041017?text=Hi%2C%20I%20would%20like%20to%20know%20more%20about%20real%20estate%20projects"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Chat with Brick.com on WhatsApp"
      class="fixed bottom-6 right-6 z-50 flex h-12 w-12 items-center justify-center rounded-full bg-green-500 text-white text-2xl font-bold shadow-[0_0_25px_rgba(34,197,94,0.9)] hover:bg-green-400 hover:scale-110 transition transform"
    >
      W
    </a>
  </body>
</html>
