---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Brick.com – Curated Real Estate Across India",
  description = "Discover verified residential projects with strong fundamentals, future-ready amenities, and trustworthy developers – handpicked for serious buyers and investors.",
} = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
  </head>

  <body class="bg-slate-950 text-slate-100 antialiased">
    <!-- GLOBAL cinematic animated background (for the whole site) -->
    <div class="fixed inset-0 -z-10 overflow-hidden">
      <!-- Solid base -->
      <div class="absolute inset-0 bg-slate-950"></div>

      <!-- Moving gradient fog (very visible) -->
      <div class="absolute -inset-32 bg-animated-city"></div>

      <!-- Soft blueprint grid overlay -->
      <div class="absolute inset-0 bg-grid-soft opacity-[0.22] mix-blend-soft-light"></div>
    </div>

    <!-- Actual page content -->
    <div class="relative min-h-screen flex flex-col overflow-x-hidden">
      <slot />
    </div>

    <!-- Floating WhatsApp Button (Global) -->
    <a
      href="https://wa.me/917989041017?text=Hi%2C%20I%20would%20like%20to%20know%20more%20about%20real%20estate%20projects"
      target="_blank"
      rel="noopener noreferrer"
      class="fixed bottom-6 right-6 z-50 flex items-center justify-center rounded-full bg-green-500 shadow-[0_0_25px_rgba(16,185,129,0.8)] hover:scale-110 transition_]()
