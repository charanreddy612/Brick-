---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Brick.com – Curated Real Estate Across India",
  description = "Discover verified residential projects with strong fundamentals, future-ready amenities, and trustworthy developers – handpicked for serious buyers and investors.",
} = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
  </head>

  <body class="text-slate-100 antialiased">
    <!-- FULLSCREEN BACKGROUND VIDEO -->
    <div class="fixed inset-0 -z-10 overflow-hidden">
      <video
        id="brick-bg-video"
        autoplay
        muted
        loop
        playsinline
        preload="auto"
        class="absolute inset-0 w-full h-full object-cover"
      >
        <source src="/bg-video.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>

      <!-- Very light overlay so we can clearly see if video is running -->
      <div class="absolute inset-0 bg-black/15"></div>
    </div>

    <!-- PAGE CONTENT -->
    <div class="relative min-h-screen flex flex-col overflow-x-hidden bg-transparent">
      <slot />
    </div>

    <!-- Global WhatsApp Button -->
    <a
      href="https://wa.me/917989041017?text=Hi%2C%20I%20would%20like%20to%20know%20more%20about%20real%20estate%20projects"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Chat with Brick.com on WhatsApp"
      class="fixed bottom-6 right-6 z-50 flex h-12 w-12 items-center justify-center rounded-full bg-green-500 text-white text-2xl font-bold shadow-[0_0_25px_rgba(34,197,94,0.9)] hover:bg-green-400 hover:scale-110 transition transform"
    >
      W
    </a>

    <!-- Small script to force playback on some strict browsers -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const v = document.getElementById("brick-bg-video");
        if (v && v.paused) {
          v.play().catch(() => {
            // ignore autoplay errors silently
          });
        }
      });
    </script>
  </body>
</html>
