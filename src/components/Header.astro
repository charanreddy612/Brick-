---
const nav = [
  { label: "Home", href: "/" },
  { label: "Properties", href: "/properties", children: [
    { label: "Poulomi Florique, Thanisandra", href: "/properties/poulomi-florique" },
    { label: "Prestige City Nova (Coming Soon)", href: "/properties/prestige-city-nova" },
    { label: "Sobha Valley View (Coming Soon)", href: "/properties/sobha-valley-view" },
  ]},
  { label: "About Us", href: "/about" },
  { label: "Contact Us", href: "/contact" },
  { label: "Blog", href: "/blog" },
];
---

<header class="sticky top-0 z-40 border-b border-white/5 bg-black/40 backdrop-blur-xl">
  <div class="mx-auto max-w-6xl px-4 py-3 flex items-center justify-between">
    <!-- Logo / Brand -->
    <a href="/" class="flex items-center gap-2 group">
      <div class="h-9 w-9 rounded-xl bg-gradient-to-br from-cyan-400 via-sky-500 to-emerald-400 flex items-center justify-center shadow-lg shadow-cyan-500/40">
        <span class="text-sm font-black tracking-tight text-slate-950 group-hover:scale-105 transition-transform">B</span>
      </div>
      <div class="flex flex-col leading-tight">
        <span class="font-semibold tracking-wide uppercase text-sm">Brick.com</span>
        <span class="text-[10px] text-slate-400">Trusted Property Channel Partner</span>
      </div>
    </a>

    <!-- Navigation -->
    <nav class="hidden md:flex items-center gap-6 text-sm">
      {nav.map((item) => (
        <div class="relative group">
          <a href={item.href} class="flex items-center gap-1 hover:text-cyan-300 transition-colors">
            <span>{item.label}</span>
            {item.children && (
              <svg class="w-3 h-3 opacity-60 group-hover:opacity-100" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.088l3.71-3.857a.75.75 0 111.08 1.04l-4.24 4.407a.75.75 0 01-1.08 0L5.21 8.27a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
              </svg>
            )}
          </a>
          {item.children && (
            <div class="pointer-events-none invisible opacity-0 group-hover:opacity-100 group-hover:visible group-hover:pointer-events-auto absolute right-0 mt-2 w-64 rounded-2xl border border-white/10 bg-slate-900/95 shadow-xl backdrop-blur-xl p-2 space-y-1">
              {item.children.map((child) => (
                <a
                  href={child.href}
                  class="block rounded-xl px-3 py-2 text-xs text-slate-200 hover:bg-cyan-500/10 hover:text-cyan-200"
                >
                  {child.label}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
    </nav>
  </div>
</header>
